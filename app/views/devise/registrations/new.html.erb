<a name="about"></a>
    <div class="intro-header" style="background: url('/bg/intro-bg.jpg');">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Welcome</h1>
                        <h3>Here you can create your account</h3>
            <hr class="intro-divider">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
   <p><%= f.label :username %><br />
   <%= f.text_field :username , id:"textbox"%></p>

    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, id:"textbox" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , id:"textbox"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , id:"textbox"%>
  </div>

  <div class="actions">
   <a href="dashboard#index"><%= f.submit "Sign up" , id:"textbox"%></a>
  </div>
<% end %>

<%= render "devise/shared/links" %>

            <hr class="intro-divider">
                  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
                    </div>
                </div>
            </div>
        </div>
  </div>